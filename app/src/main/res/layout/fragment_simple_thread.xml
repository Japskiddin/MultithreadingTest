<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SimpleThreadFragment"
    >

    <Button
        android:id="@+id/btn_create_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Thread"
        app:layout_constraintBottom_toTopOf="@id/btn_create_looper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/btn_create_looper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Looper Thread"
        app:layout_constraintBottom_toTopOf="@id/btn_create_handler_thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_create_thread"
        />

    <Button
        android:id="@+id/btn_create_handler_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create HandlerThread"
        app:layout_constraintBottom_toTopOf="@id/btn_create_asynctask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_create_looper"
        />

    <Button
        android:id="@+id/btn_create_asynctask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create AsyncTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_create_handler_thread"
        />

</androidx.constraintlayout.widget.ConstraintLayout>